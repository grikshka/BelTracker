      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="215.0" styleClass="vboxOrder" stylesheets="@../css/Style.css">
         <children>
            <Label fx:id="lblDepartment" prefHeight="22.0" prefWidth="195.0" text="Department">
